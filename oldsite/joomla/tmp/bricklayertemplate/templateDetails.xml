<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="1.6" type="template" client="site">
<name>Bricklayer Template</name>
<creationDate>04/18/2013</creationDate>
<author>Nate Mason</author>
<authorEmail>mandawgus@gmail.com</authorEmail>
<authorUrl></authorUrl>
	<copyright>Copyright (C) 2013 Fargod Design Co., Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.6.0</version>
	<description>Bricklayer Template Template generated at Fargo Apps using the Fargo Template Generator</description>
	<files>
			<filename>index.html</filename>
			<folder>css</folder>
			<folder>html</folder>
			<folder>images</folder>
			<folder>js</folder>
			<folder>language</folder>
			<folder>layouts</folder>
		<filename>templateDetails.xml</filename>
		<filename>index.php</filename>
	</files>
	
	<positions>
		<position>header</position>
		<position>header_left</position>
		<position>header_right</position>
		<position>slideshow</position>
		<position>content_top</position>
		<position>conter_inner</position>
		<position>content_bottom</position>
		<position>footer</position>
		<position>footer_left</position>
		<position>footer_right</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateStyle" type="list" default="1" label="Template Style" description="This will control what style loads for the content" filter="word">
					<option value="homepage">Home Page</option>
					<option value="subpage">Sub Page</option>
					<option value="twocolumn">Two Column</option>
				</field>											
			</fieldset>
		</fields>
	</config>

</extension>
	